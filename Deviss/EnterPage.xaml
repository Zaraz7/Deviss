<Page x:Class="Deviss.EnterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Deviss"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnterPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="tbLogin" Margin="0,0,0,5"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="pwPassword" Margin="0,0,0,15"/>
            <Button Click="EnterClick">
                <TextBlock Text="Войти" Foreground="#fff"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
